<UserControl x:Class="SmartChair.content.Weightcontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
              xmlns:chartingToolkit=
	            "clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit">
    <StackPanel>
        <StackPanel Orientation="Horizontal" >
            <DatePicker Name="dp1" Width="140" Height="25"/>
            <DatePicker Name="dp2" Width="140" Height="25"/>
        </StackPanel>
        <chartingToolkit:Chart Name="lineChart" Title="" Height="500" >
            <chartingToolkit:LineSeries  DependentValuePath="Value" 
		            IndependentValuePath="Key" ItemsSource="{Binding}" 
		            IsSelectionEnabled="True" />
        </chartingToolkit:Chart>
    </StackPanel>

</UserControl>