<Page x:Class="SmartChair.gui.Weightcontrol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="weightcontrol"
      xmlns:chartingToolkit=
	"clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit">
    <Grid Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DatePicker Name="dp1" Width="140" Grid.Row="1" Grid.Column="0"/>
        <DatePicker Name="dp2" Width="140" Grid.Row="1" Grid.Column="1"/>
        <chartingToolkit:Chart Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="0" Name="lineChart" Title="" 
		        VerticalAlignment="Bottom" Height="254" Width="500">
            <chartingToolkit:LineSeries  DependentValuePath="Value" 
		            IndependentValuePath="Key" ItemsSource="{Binding}" 
		            IsSelectionEnabled="True" />
        </chartingToolkit:Chart>
    </Grid>
</Page>